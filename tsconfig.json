{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"skipLibCheck": true,
		"types": ["vite/client", "jest"],
		"typeRoots": ["./node_modules/@types/", "./types"],
		"baseUrl": "./",
		"outDir": "./",
		"rootDir": "./",
		"paths": {
			"@/*": ["src/*"],
			"#/*": ["types/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"types/**/*.d.ts",
		"types/**/*.ts",
		"mock/**/*.ts",
		"tests/**/*.ts",
		"vite.config.ts"
	],
	"exclude": ["node_modules", "dist", "**/*.js"]
}
